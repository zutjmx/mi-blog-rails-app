
<div class="row">
	<div class="col-md-6">
			<%= form_for @articulo do |f| %>
				  <% if @articulo.errors.any? %>
						<div id="errors">
							<h2>Se han producido Los siguientes errores: </h2>
							<ul>
								<% @articulo.errors.full_messages.each do |msg| %>
									<li><%= msg %></li>
								<% end %>
							</ul>
						</div>
					<% end %> 

				<div class="form-group">
					<%= f.label :titulo %> <br>
					<%= f.text_field :titulo, class: 'form-control' %> <br>
				</div>

				<div class="form-group">
					<%= f.label :contenido %> <br>
					<%= f.text_area :contenido, class: 'form-control' %> <br>
				</div>

				<%= f.submit "#{@boton} ArtÃ­culo", class:'btn btn-primary'  %>
		<% end %>	
	</div>	
</div>




