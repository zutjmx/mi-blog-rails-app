<div class="row">
  <div class="col-md-6">
    <%= form_for([@articulo, @articulo.comentarios.build]) do |f| %>  
      <div class="form-group">
        <%= f.label :nombre %>
        <%= f.text_field :nombre, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :texto %>
        <%= f.text_area :texto, class: "form-control" %>
      </div>      
     
     
      <div class="actions">
        <%= f.submit "Publicar", class: 'btn btn-primary' %>
      </div>
     
    <% end %>
    
  </div>
</div>